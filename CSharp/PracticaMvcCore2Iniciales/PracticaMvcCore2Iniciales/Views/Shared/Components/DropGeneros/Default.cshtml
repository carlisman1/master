@model List<Generos>

<div class="dropdown">
    <button class="btn btn-info" data-bs-toggle="dropdown">
        Generos
    </button>
    <ul class="dropdown-menu">
        @{
            foreach(Generos gen in Model)
            {
                <li>
                    <a class="dropdown-item" asp-action="Filtrar" asp-controller="Libros" asp-route-idgenero="@gen.IdGenero" asp-route-nombregenero="@gen.Nombre">
                        @gen.Nombre
                    </a>
                </li>
            }
        }
    </ul>
</div>
