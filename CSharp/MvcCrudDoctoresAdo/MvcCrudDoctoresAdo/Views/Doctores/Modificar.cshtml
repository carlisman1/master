@model Doctor

<h1>Modificar</h1>

<form method="post">
    <label>Id Hospital</label>
    <input type="number" name="idhospital"
        class="form-control" required value="@Model.IdHospital"/>

    <input type="hidden" name="iddoctor"
        class="form-control" readonly value="@Model.IdDoctor"/>

    <label>Apellido</label>
    <input type="text" name="apellido"
        class="form-control" required value="@Model.Apellido"/>

    <label>Especialidad</label>
    <input type="text" name="especialidad"
        class="form-control" required value="@Model.Especialidad"/>

    <label>Salario</label>
    <input type="number" name="salario"
        class="form-control" required value="@Model.Salario"/>

    <button class="btn btn-info">
        Insertar
    </button>
</form>