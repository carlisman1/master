@*@model DatosDoctores*@
@model List<Doctor>

@{
    //AQUI SIEMPRE DEBEMOS CONVERTIR VIEWDATA A SUS TIPOS
    List<string> especialidades = (List<string>)ViewData["ESPECIALIDADES"];

}

@section scripts{
    $(document).ready(function(){
        $('select').formSelect();
    })
}   

<h1>Doctores especialidad</h1>

<form method="post">
    <select name="especialidad">
            @foreach (string espe in especialidades)
        {
            <option value="@espe">@espe</option>
        }
    </select>
    <button>
        Buscar
    </button>
</form>

